# MCP server runtime
MCP_SERVER_NAME=MySQL News MCP
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_TRANSPORT=streamable-http
MCP_BASE_URL=https://mcp.your-domain.com

# MySQL source on VPS
MYSQL_HOST=127.0.0.1
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=replace_me
MYSQL_DATABASE=news
MYSQL_CONNECT_TIMEOUT=8
MYSQL_READ_TIMEOUT=15

# Query guardrails
MCP_MAX_ROWS=200
MCP_MAX_SCAN_SYMBOLS=50

# OAuth resource-server settings
AUTH_ISSUER_URL=https://auth.your-domain.com
AUTH_JWKS_URI=https://auth.your-domain.com/.well-known/jwks.json
AUTH_AUDIENCE=https://mcp.your-domain.com
AUTH_REQUIRED_SCOPES=news.read
